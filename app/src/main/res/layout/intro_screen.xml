<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintergrund">

    <ImageView
        android:id="@+id/iv_introbild"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buchintro" />

    <TextView
        android:id="@+id/tv_gamestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="TextView"
        android:textColor="@color/text"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_introbild" />

    <TextView
        android:id="@+id/tv_titeleins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_introbild"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_titelzwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gamestart"
        app:layout_constraintEnd_toEndOf="@+id/iv_introbild"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>