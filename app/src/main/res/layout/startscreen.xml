<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintergrund">

    <ImageView
        android:id="@+id/iv_taverne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/taverne" />

    <Button
        android:id="@+id/bt_charerstellen"
        android:layout_width="142dp"
        android:layout_height="121dp"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="Button"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bt_option"
        android:layout_width="102dp"
        android:layout_height="97dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="284dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="Button"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_charerstellen"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bt_kompendium"
        android:layout_width="93dp"
        android:layout_height="85dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="308dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="Button"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_charerstellen"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bt_laden"
        android:layout_width="227dp"
        android:layout_height="98dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="Button"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_charerstellen"
        app:layout_constraintEnd_toStartOf="@+id/bt_beenden"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bt_startgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="232dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/bt_kompendium"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bt_beenden"
        android:layout_width="95dp"
        android:layout_height="76dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bridgnorth_regular"
        android:text="Button"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>